# Staging Environment
# Copy to .env.staging for staging deployment

# Environment identifier
VITE_ENVIRONMENT=staging

# Firebase Configuration (Staging Project)
VITE_FIREBASE_API_KEY=your-staging-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-staging-project.firebaseapp.com
VITE_FIREBASE_DATABASE_URL=https://your-staging-project-default-rtdb.firebaseio.com
VITE_FIREBASE_PROJECT_ID=your-staging-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-staging-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# API Configuration (Staging API with production data mirror)
VITE_API_BASE_URL=https://voxxy-presents-api-staging.run.app/api

# Feature Flags
VITE_DEBUG_MODE=true
VITE_EXPERIMENTAL_FEATURES=false