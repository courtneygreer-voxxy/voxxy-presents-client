# Sandbox Environment
# Copy to .env.sandbox for experimental deployment

# Environment identifier
VITE_ENVIRONMENT=sandbox

# Firebase Configuration (Sandbox Project)
VITE_FIREBASE_API_KEY=your-sandbox-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-sandbox-project.firebaseapp.com
VITE_FIREBASE_DATABASE_URL=https://your-sandbox-project-default-rtdb.firebaseio.com
VITE_FIREBASE_PROJECT_ID=your-sandbox-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-sandbox-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# API Configuration - Leave empty for sandbox (uses Firebase directly)
# VITE_API_BASE_URL=

# Feature Flags
VITE_DEBUG_MODE=true
VITE_EXPERIMENTAL_FEATURES=true